<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helveticacompressed"
            android:text="Watchtrack"
            android:textColor="#1CE783"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/txt_tabname"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/helveticalight"
            android:gravity="center"
            android:textColor="#FFFFFF"
            tools:text="PageTitle here" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layoutDirection="rtl" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/outline_home_24" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/outline_stream_24" />
    </com.google.android.material.tabs.TabLayout>

</LinearLayout>